---
// THIS COMPONENT NEEDS TO BE REWRITE!!
import type { CollectionEntry } from 'astro:content'

import { cn } from '@/utils'
import { Image } from 'astro:assets'

type Props = {
  posts: CollectionEntry<'blog'>[]
}

const { posts }: Props = Astro.props
---

<section class={cn(`flex flex-col md:flex-row sm:justify-between gap-8`)}>
  {
    posts.length > 0 ? (
      posts.map((post) => {
        return (
          <section class="flex flex-wrap gap-2">
            <section class="min-h-full">
              <Image
                src={post.data.heroImage}
                width={200}
                height={200}
                format="webp"
                class="w-16 h-16 object-cover rounded-full  "
                alt={`img of ${post.data.title}`}
              />
            </section>
            <header class="flex justify-center items-center">
              <a
                class="font-medium  hover:underline"
                href={`/post/${post.slug}/`}
              >
                {post.data.title}
              </a>
            </header>
          </section>
        )
      })
    ) : (
      <span class="text-gray-500">There are no related posts yet. ðŸ˜¢</span>
    )
  }
</section>
