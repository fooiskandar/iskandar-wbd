---
import { languages } from '@/i18n/ui'
import HeaderLink from '@/components/HeaderLink'
import Language from '@/components/icons/Language'
---

<div class="relative">
  <!-- Hidden checkbox to toggle the dropdown -->
  <input type="checkbox" id="dropdown-toggle" class="peer hidden" />

  <label for="dropdown-toggle" class="cursor-pointer block">
    <Language />
  </label>

  <div
    class="w-36 absolute left-0 mt-2 p-2 border-gray-400 border dark:border-gray-600 rounded-xl overflow-hidden hidden backdrop-blur peer-checked:block"
  >
    {
      Object.entries(languages).map(([lang, label]) => (
        <HeaderLink
          href={lang === 'en' ? '/' : `/${lang}`}
          class={
            'option cursor-pointer p-2 block rounded-lg hover:bg-gray-200 dark:hover:bg-gray-600 dark:text-white'
          }
        >
          <button>{label}</button>
        </HeaderLink>
      ))
    }
  </div>
</div>
